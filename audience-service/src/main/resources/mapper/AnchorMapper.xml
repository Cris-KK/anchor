<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.reward.audience.mapper.AnchorMapper">

    <!-- 结果映射 -->
    <resultMap id="AnchorMap" type="Anchor">
        <id column="id" property="id"/>
        <result column="anchor_id" property="anchorId"/>
        <result column="nickname" property="nickname"/>
        <result column="status" property="status"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <!-- 根据主播ID查询主播信息 -->
    <select id="selectByAnchorId" parameterType="string" resultMap="AnchorMap">
        SELECT * FROM anchor WHERE anchor_id = #{anchorId}
    </select>

    <!-- 插入主播信息 -->
    <insert id="insert" parameterType="Anchor">
        INSERT INTO anchor (anchor_id, nickname, status)
        VALUES (#{anchorId}, #{nickname}, #{status})
    </insert>

    <!-- 更新主播信息 -->
    <update id="update" parameterType="Anchor">
        UPDATE anchor
        SET nickname = #{nickname}, status = #{status}, update_time = NOW()
        WHERE anchor_id = #{anchorId}
    </update>

    <!-- 检查主播是否存在且状态正常 -->
    <select id="existsActiveAnchor" parameterType="string" resultType="int">
        SELECT COUNT(1) FROM anchor
        WHERE anchor_id = #{anchorId} AND status = 1
    </select>
</mapper>